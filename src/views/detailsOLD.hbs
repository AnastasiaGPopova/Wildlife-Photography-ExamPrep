
        <section id="viewhotelDetails">
            <h2>Details</h2>
            <div class="hotel-ticket">
                <div class="hotel-left">
                    <img src="{{currentHotel.imageUrl}}"
                        alt="">
                </div>
                <div class="hotel-right">
                    <div>
                        <h3>{{currentHotel.name}}</h3>
                    </div>
                    <div>
                        {{currentHotel.city}}
                    </div>
                    <p><span >Free rooms: {{currentHotel.freeRooms}}</span> </p>

                    {{#if isOwner}}

                    <a href="/hotel/{{currentHotel._id}}/edit" class="edit">Edit</a>
                    <a href="/hotel/{{currentHotel._id}}/delete" class="remove">Delete</a>
                    {{else}}
                      {{#if isBooked}}
                      <p><span class="green">You already have booked a room</span> </p>
                      {{else}}
                      <a href="/hotel/{{currentHotel._id}}/book" class="book">Book</a>
                      {{/if}}
                    {{/if}}
                </div>

            </div>
        </section>